<mtapp:setting
    id="QQ_app_key"
    label="<__trans phrase="QQ Application Key">"
    hint="<__trans phrase="The key for the QQ application associated with your blog.">"
    show_hint="1">
    <input type="text" name="QQ_app_key" id="QQ_app_key" value="<mt:var name="QQ_app_key" escape="html">" size="40" />
    <mt:if name="QQ_app_key"><a href="http://connect.qq.com/manage/login" target="_blank"><__trans phrase="Edit Tencent Open Platform"></a><mt:else><a href="http://connect.qq.com/" target="__blank"><__trans phrase="Create Tencent Open Platform"></a></mt:if>
</mtapp:setting>
<mtapp:setting
    id="QQ_app_secret"
    label="<__trans phrase="QQ Application Secret">"
    hint="<__trans phrase="The secret for the QQ application associated with your blog.">"
    show_hint="1">
    <input type="text" name="QQ_app_secret" id="QQ_app_secret" value="<mt:var name="QQ_app_secret" escape="html">" size="40" />
</mtapp:setting>
